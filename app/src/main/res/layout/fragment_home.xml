<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/fl_home_fg_layouts"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.benkids.watch_shop.customview.HeadNavView
                android:id="@+id/hnv_home_fg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.benkids.watch_shop.customview.HeadNavView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/linear_home_head"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#00000000">
        <ImageButton
            android:id="@+id/ib_home_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="#00000000"
            android:src="@drawable/home_icon_sweep_white"/>
        <Button
            android:id="@+id/bt_home_search"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/common_label_search"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:textColor="#666766"
            android:background="@drawable/et_home_search_shape"
            android:text="搜索型号,系列,品牌"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginRight="15dp"
            android:src="@drawable/home_icon_consult_white"/>
    </LinearLayout>
</FrameLayout>