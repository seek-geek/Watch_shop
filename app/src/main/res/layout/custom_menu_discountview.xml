<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linear_menu_iv_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_height="35dp"
            android:src="@mipmap/img_menu_default" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_height="35dp"
            android:src="@mipmap/img_menu_default"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_height="35dp"
            android:src="@mipmap/img_menu_default" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_height="35dp"
            android:src="@mipmap/img_menu_default"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_menu_tv_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:text="选表中心"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:text="闪购"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:text="手机专享"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:text="表友惠"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_menu_iv_02"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_height="35dp"
            android:src="@mipmap/img_menu_default"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_height="35dp"
            android:src="@mipmap/img_menu_default"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_height="35dp"
            android:src="@mipmap/img_menu_default" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_height="35dp"
            android:src="@mipmap/img_menu_default" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_menu_tv_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:text="商务馆"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:text="时尚馆"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:text="运动馆"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:text="推荐有礼"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_head_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/img_head_discount_default"
        android:background="#EEEEEE"/>
    <LinearLayout
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_watch_discount_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@mipmap/img_discount_default"/>
            <Button
                android:id="@+id/btn_discount_01"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:background="#F50303"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:padding="2dp"
                android:layout_alignRight="@id/iv_watch_discount_01"
                android:layout_alignTop="@id/iv_watch_discount_01"
                android:text="0.0折"/>
            <TextView
                android:id="@+id/tv_price_01"
                android:layout_below="@id/iv_watch_discount_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:layout_centerHorizontal="true"
                android:text="￥0000"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_watch_discount_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/img_discount_default"/>
            <Button
                android:id="@+id/btn_discount_02"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:background="#F50303"
                android:layout_alignRight="@id/iv_watch_discount_02"
                android:layout_alignTop="@id/iv_watch_discount_02"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:padding="2dp"
                android:text="0.0折"/>
            <TextView
                android:id="@+id/tv_price_02"
                android:layout_below="@id/iv_watch_discount_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:layout_centerHorizontal="true"
                android:text="￥0000"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_watch_discount_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/img_discount_default"/>
            <Button
                android:id="@+id/btn_discount_03"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:background="#F50303"
                android:layout_alignRight="@id/iv_watch_discount_03"
                android:layout_alignTop="@id/iv_watch_discount_03"
                android:textColor="#ffffff"
                android:padding="2dp"
                android:textSize="10sp"
                android:text="0.0折"/>
            <TextView
                android:id="@+id/tv_price_03"
                android:layout_below="@id/iv_watch_discount_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:paddingBottom="10dp"
                android:layout_centerHorizontal="true"
                android:text="￥0000"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>