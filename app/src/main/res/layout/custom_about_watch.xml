<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/rl_entity_store"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_entity_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:src="@mipmap/img_discount_default"/>
        <Button
            android:id="@+id/btn_entity_store_title"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_above="@+id/btn_entity_store_subtitle"
            android:layout_alignLeft="@+id/btn_entity_store_subtitle"
            android:textSize="15dp"
            android:gravity="bottom|center_horizontal"
            android:background="#80000000"
            android:textColor="#ffffff"
            android:text="-----"/>
        <Button
            android:id="@+id/btn_entity_store_subtitle"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/iv_entity_store"
            android:layout_marginBottom="20dp"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:text="-------"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_maintain_watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_maintain_watch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/img_discount_default"/>
            <Button
                android:id="@+id/btn_maintain_watch"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignBottom="@id/iv_maintain_watch"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:background="#80000000"
                android:text="----  --- ---"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_recommend_watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_recommend_watch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/img_discount_default"/>
            <Button
                android:id="@+id/btn_recommend_watch"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:layout_alignBottom="@id/iv_recommend_watch"
                android:background="#80000000"
                android:text="------  ---- ----"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>