<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal">
    <FrameLayout
        android:id="@+id/fl_fg_layouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_tab">
    </FrameLayout>
    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#F1F1F1"
        android:layout_height="60dp">
        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:button="@null"
            android:checked="true"
            android:background="#F1F1F1"
            android:drawableTop="@drawable/tab_home_selector"
            android:textColor="@drawable/tab_textcolor_selector"
            android:text="首页"/>
        <RadioButton
            android:id="@+id/rb_choose_watch"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:button="@null"
            android:background="#F1F1F1"
            android:drawableTop="@drawable/tab_selectwatch_selector"
            android:textColor="@drawable/tab_textcolor_selector"
            android:text="选表"/>
        <RadioButton
            android:id="@+id/rb_shop"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:button="@null"
            android:background="#F1F1F1"
            android:drawableTop="@drawable/tab_cart_selector"
            android:textColor="@drawable/tab_textcolor_selector"
            android:text="购物车"/>
        <RadioButton
            android:id="@+id/rb_mine"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:button="@null"
            android:background="#F1F1F1"
            android:drawableTop="@drawable/tab_me_selector"
            android:textColor="@drawable/tab_textcolor_selector"
            android:text="我的"/>
    </RadioGroup>
</RelativeLayout>
