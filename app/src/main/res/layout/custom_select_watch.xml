<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_select_watch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:paddingBottom="20dp">
            <ImageView
                android:id="@+id/iv_man_watch"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_select_watch_default"/>
            <Button
                android:id="@+id/btn_man_watch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_man_watch"
                android:background="#161914"
                android:textColor="#ffffff"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingBottom="20dp"
            android:layout_weight="1" >
            <ImageView
                android:id="@+id/iv_women_watch"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:src="@mipmap/img_select_watch_default"/>
            <Button
                android:id="@+id/btn_women_watch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_women_watch"
                android:layout_marginLeft="1dp"
                android:background="#161914"
                android:textColor="#ffffff"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>